<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:pv="http://schemas.android.com/apk/res-auto">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pc"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        pv:pv_background_color="#2C2C2C"
        pv:pv_host_text="Piano"
        pv:pv_host_text_size="29dp"
        pv:pv_particle_text="JN"
        pv:pv_particle_text_size="19dp"
        pv:pv_text_color="#FFFFFF"
        pv:pv_text_anim_time="1000"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="1000" />

</androidx.constraintlayout.widget.ConstraintLayout>